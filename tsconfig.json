{
    "compilerOptions": {
      "outDir": "build/dist",
      "module": "esnext",
      "target": "es2016",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "baseUrl": ".",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "allowJs": true,
      "experimentalDecorators": true,
    },
    "exclude": [
      "node_modules",
      "build",
      "scripts",
      "webpack",
    ]
  }
  